<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:maxWidth="120dp"
    android:minWidth="80dp"
    android:background="@drawable/rv_comment_one_bg">

    <TextView
        android:id="@+id/tv_data_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="@string/get_thumb_up"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_data_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textColor="@color/theme_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/black"
        android:text="昨日新增"
        app:layout_constraintBottom_toBottomOf="@+id/tv_data_change"
        app:layout_constraintStart_toStartOf="@+id/tv_data_name" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@mipmap/icon_up_triangle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_data_change"
        app:layout_constraintEnd_toStartOf="@+id/tv_data_change"
        app:layout_constraintTop_toTopOf="@+id/tv_data_change" />

    <TextView
        android:id="@+id/tv_data_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:text="3"
        android:textColor="@color/theme_blue"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>