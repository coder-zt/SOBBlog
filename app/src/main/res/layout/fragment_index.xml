<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.coder.zt.sobblog.ui.view.PullScrollView
            android:id="@+id/pull_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2f2f2f"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="阳光沙滩"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="32dp"
                    android:text="--让学习编程更加简单"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp" />

            </LinearLayout>


            <com.coder.zt.sobblog.ui.view.CustomScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/text"
                android:overScrollMode="never">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="1000dp"
                        android:text="1223456758777777788888888888888888888888888886578544444444444444444444443543666666666666653333333333336"
                        android:gravity="center_horizontal"
                        android:background="@color/teal_700" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.coder.zt.sobblog.ui.view.CustomScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正在加载。。。"
                android:layout_below="@+id/scrollView"/>

        </com.coder.zt.sobblog.ui.view.PullScrollView>


        <com.coder.zt.sobblog.ui.view.MinifeedLoadingView
            android:id="@+id/loading_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"/>

    </FrameLayout>
</layout>